<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".UtilitiesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiện ích"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_marginBottom="16dp"/>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowCount="3" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_electric"
                    android:contentDescription="Thanh toán điện"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán Điện"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_water"
                    android:contentDescription="Thanh toán nước"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán Nước"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:id="@+id/btnTopUp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_phone_topup"
                    android:contentDescription="Nạp tiền điện thoại"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nạp tiền ĐT"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:id="@+id/btnMovieBooking"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Mua vé xem phim"
                    android:src="@drawable/ic_movie_ticket" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vé xem phim"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:id="@+id/btnFlightBooking"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Đặt vé máy bay"
                    android:src="@drawable/ic_flight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vé máy bay"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_hotel"
                    android:contentDescription="Đặt phòng khách sạn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặt phòng"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>