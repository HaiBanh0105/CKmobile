<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"> <!-- Nền trắng cho card -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"> <!-- Tăng padding cho thoáng -->

        <ImageView
            android:id="@+id/imgAccountIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_account_balance"
            android:contentDescription="Icon"
            android:background="@drawable/rounded_light_orange_bg"
            android:padding="8dp"
            app:tint="@color/dark_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAccountName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tài khoản thanh toán"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/imgAccountIcon"
            app:layout_constraintTop_toTopOf="@id/imgAccountIcon"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1903 4567 8910"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@id/tvAccountName"
            app:layout_constraintTop_toBottomOf="@id/tvAccountName"/>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/dark_blue"
            android:alpha="0.1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAccountNumber"/>

        <TextView
            android:id="@+id/tvAccountBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="50.000.000.000 VND"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
