<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/open_mortgage"
    android:background="#F4F7F9">

    <!-- 1. Cố định Toolbar lên trên cùng -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back_standard"
        app:navigationIconTint="@color/dark_blue"
        app:title="Mở vay vốn"
        app:titleCentered="true"
        app:titleTextColor="@color/dark_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. Phần nội dung cuộn bên dưới -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mục đích vay vốn"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:layout_marginBottom="8dp"/>

            <!-- Spinner bọc trong Card với viền nhẹ -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#DDDDDD"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">

                <Spinner
                    android:id="@+id/spinnerPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lãi suất áp dụng: "
                    android:textColor="#757575"/>
                <TextView
                    android:id="@+id/tvInterestRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.5% / năm"
                    android:textStyle="bold"
                    android:textColor="@color/orange"/> <!-- Màu cam nhấn lãi suất -->
            </LinearLayout>

            <!-- Nhập số tiền vay -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số tiền muốn vay (VND)"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/dark_blue"
                app:hintTextColor="@color/dark_blue"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtLoanAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nhập thời gian vay -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thời gian vay (Năm)"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/dark_blue"
                app:hintTextColor="@color/dark_blue"
                android:layout_marginBottom="32dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtYears"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="20"
                    android:textColor="@color/dark_blue"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Box kết quả tạm tính - Phối màu chuyên nghiệp -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E3F2FD"> <!-- Màu xanh dương cực nhạt -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trả hàng tháng dự kiến"
                        android:textColor="@color/dark_blue"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvMonthlyPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 VND"
                        android:textColor="@color/orange"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 3. Nút đăng ký ghim dưới đáy màn hình -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:text="Đăng ký hồ sơ vay"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/dark_blue"
        app:rippleColor="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent" />

    <include
        layout="@layout/view_loading_overlay" />

</androidx.constraintlayout.widget.ConstraintLayout>
