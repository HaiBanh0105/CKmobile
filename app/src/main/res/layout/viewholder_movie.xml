<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Ảnh phim - Bọc trong CardView để bo góc -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:background="#DDDDDD"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <!-- Tên phim -->
    <TextView
        android:id="@+id/txtMovieName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="TÊN PHIM CỦA BẠN"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardPoster"
        app:layout_constraintTop_toTopOf="@id/cardPoster" />

    <!-- Thông tin Thể loại -->
    <TextView
        android:id="@+id/txtMovieInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Hành động, Phiêu lưu"
        android:textColor="#757575"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txtMovieName"
        app:layout_constraintTop_toBottomOf="@id/txtMovieName" />

    <!-- Độ tuổi -->
    <TextView
        android:id="@+id/txtMovieAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Độ tuổi: 13+"
        android:textColor="#757575"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txtMovieName"
        app:layout_constraintTop_toBottomOf="@id/txtMovieInfo" />

    <!-- Thời lượng (Nằm bên trái nút Đặt vé) -->
    <TextView
        android:id="@+id/txtMovieDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:text="1h 34m"
        android:textColor="#424242"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/btnBook"
        app:layout_constraintStart_toStartOf="@id/txtMovieName"
        app:layout_constraintTop_toTopOf="@id/btnBook" />

    <!-- Nút đặt vé -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBook"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/rounded_dark_blue_bg"
        android:paddingHorizontal="16dp"
        android:text="Đặt vé"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cardPoster"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
