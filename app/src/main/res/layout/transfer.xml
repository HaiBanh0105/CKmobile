<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transfer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.transfer">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Chuyển tiền"
            app:navigationIcon="@drawable/ic_arrow_back_standard" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnContinue"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Thông tin tài khoản nguồn (Chuyên nghiệp hơn với icon) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

<!--                    <ImageView-->
<!--                        android:layout_width="40dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:src="@drawable/ic_bank_logo_placeholder"-->
<!--                        android:contentDescription="Bank Logo" />-->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvSourceAccountName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tài khoản thanh toán"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvSourceBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Số dư khả dụng: 10.500.000 VND"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chọn loại chuyển khoản: Nội bộ / Liên ngân hàng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại chuyển khoản"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTransferType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInternal"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trong ngân hàng"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipExternal"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liên ngân hàng" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Spinner chọn ngân hàng thụ hưởng (ẨN BAN ĐẦU) -->
            <LinearLayout
                android:id="@+id/layoutBankSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <!-- Tiêu đề nằm ngoài vùng màu xám -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngân hàng thụ hưởng"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp"
                    android:textColor="?android:attr/textColorSecondary"/>

                <!-- Vùng màu xám chỉ bao quanh Spinner -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_gray_bg"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp">

                    <Spinner
                        android:id="@+id/spinnerBanks"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:spinnerMode="dropdown"
                        style="@style/Widget.AppCompat.Spinner" />

                </FrameLayout>
            </LinearLayout>

            <!-- Số tài khoản hưởng thụ -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAccountNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Số tài khoản hưởng thụ"
                app:endIconMode="custom"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtAccountNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tên người thụ hưởng (read-only) -->
            <!-- Tên người thụ hưởng (Hiển thị sau khi check STK) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAccountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                android:visibility="gone"
                tools:visibility="visible"> <!-- Mặc định ẩn, chỉ hiện khi tìm thấy tên -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        app:tint="#4CAF50" /> <!-- Icon tick xanh -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Người nhận"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/tvAccountNameResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NGUYEN VAN A"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Số tiền -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAmount"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Số tiền (VND)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nội dung chuyển khoản -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilContent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Nội dung chuyển khoản">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Nút tiếp tục -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:padding="14dp"
        android:text="Tiếp tục"
        app:cornerRadius="12dp"
        android:background="@drawable/rounded_blue_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        layout="@layout/view_loading_overlay" />

</androidx.constraintlayout.widget.ConstraintLayout>
