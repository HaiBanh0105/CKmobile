<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Banking" parent="Theme.Material3.Light.NoActionBar">
        <!-- Các màu cơ bản -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:windowBackground">?attr/colorSurface</item>

        <!-- Cấu hình màu cho thanh trạng thái (StatusBar) và thanh điều hướng (NavBar) -->
        <!-- Mặc định dùng màu trong suốt để hỗ trợ tràn viền edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Đặt màu icon trên Status bar thành màu tối (vì nền light theme) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Style cho Bottom Navigation -->
    <style name="App.CustomBottomNav" parent="Widget.Material3.BottomNavigationView">
        <!-- Màu của viên thuốc (Indicator) khi được chọn -->
        <item name="itemActiveIndicatorStyle">@style/App.CustomIndicator</item>
        <!-- Màu nền tổng thể của cả thanh điều hướng -->
        <item name="android:background">@color/white</item>
    </style>

    <!-- Style cho hình nền bao quanh Icon (Indicator) -->
    <style name="App.CustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <!-- Đổi màu nền của "viên thuốc" sang màu Cam nhạt để nổi bật icon -->
        <item name="android:color">#FFE0B2</item> <!-- Màu Cam nhạt -->
        <!-- Bạn có thể chỉnh độ bo góc hoặc chiều rộng tại đây nếu muốn -->
        <item name="marginHorizontal">12dp</item>
    </style>

    <style name="OtpStyle">
        <!-- Chiều rộng đặt là 0dp vì đã dùng layout_weight ở file XML -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_otp_box</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
        <item name="android:textColor">#2D3436</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint"></item>
    </style>

    <style name="Theme.Banking" parent="Base.Theme.Banking" />
</resources>
