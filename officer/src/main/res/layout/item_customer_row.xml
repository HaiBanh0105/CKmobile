<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                android:contentDescription="Avatar khách hàng" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvCustomerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 123456"
                android:textSize="14sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgAddMortgage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_open_mortgage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Mở khoản vay thế chấp"
            android:padding="8dp"
             />

        <ImageView
            android:id="@+id/imgAddSaving"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_open_saving"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Mở sổ tiết kiệm"
            android:padding="8dp"
            android:layout_marginStart="4dp"
            />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>